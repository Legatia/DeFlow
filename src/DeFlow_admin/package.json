{
  "name": "deflow-admin",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "setup": "npm i && dfx canister create DeFlow_backend && dfx generate DeFlow_backend && dfx deploy",
    "dev": "vite --port 3000",
    "start": "vite --port 3000",
    "build": "tsc --project tsconfig.prod.json && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:run && npm run test:e2e",
    "test:defi": "vitest run src/tests/**/defi*.test.*",
    "test:bitcoin": "vitest run src/tests/**/*bitcoin*.test.* --exclude=**/bitcoin-workflow.test.ts",
    "test:integration": "vitest run src/tests/integration/",
    "test:components": "vitest run src/tests/components/",
    "test:services": "vitest run src/tests/services/",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{json,js,jsx,ts,tsx,css,scss}\"",
    "prebuild": "dfx generate"
  },
  "dependencies": {
    "@dfinity/agent": "^2.4.1",
    "@dfinity/auth-client": "^2.4.1",
    "@dfinity/candid": "^2.4.1",
    "@dfinity/ledger-icp": "^4.0.0",
    "@dfinity/principal": "^2.4.1",
    "@dfinity/utils": "^2.13.2",
    "@reactflow/background": "^11.3.14",
    "@reactflow/controls": "^11.2.14",
    "@reactflow/core": "^11.11.4",
    "@reactflow/minimap": "^11.7.14",
    "@reactflow/node-toolbar": "^1.3.14",
    "@tanstack/react-query": "^5.84.1",
    "@types/bignumber.js": "^4.0.3",
    "bignumber.js": "^9.3.1",
    "clsx": "^2.1.1",
    "lit-html": "^3.3.1",
    "lucide-react": "^0.446.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "reactflow": "^11.11.4",
    "tailwind-merge": "^2.5.3",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.1.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "cross-fetch": "^3.1.6",
    "dotenv": "^16.4.5",
    "eslint": "^9.12.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc-fb9a90fa48-20240614",
    "eslint-plugin-react-refresh": "^0.4.12",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "sass": "^1.79.4",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^3.2.4"
  }
}
